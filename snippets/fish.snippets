snippet begin
	begin
		$1
	end

snippet fun
	function ${1:`!v empty(expand('%')) ? 'name' : expand('%:t:r')`}
		$2
	end

snippet if
	if ${1:condition}
		$2
	end

snippet test
	if test ${1:expression}
		$2
	end

snippet elif
	else if ${1:condition}
		$2

snippet switch
	switch ${1:value}
		case ${2:matches}
			$3
	end

snippet for
	for ${1:var} in ${2:values}
		$3
	end

snippet while
	while ${1:condition}
		$2
	end
